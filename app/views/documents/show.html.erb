<% content_for :title, "Showing Document" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl mb-6">Showing Document</h1>

  <div class="mb-6">
    <p class="text-lg font-semibold text-gray-900 mb-1"><%= @document.title %></p>
    <p class="text-gray-700"><strong class="text-gray-800">Category:</strong> <%= @document.category.presence || "Not categorized" %></p>

    <% if @document.file.attached? %>
      <%= link_to "Download", rails_blob_path(@document.file, disposition: "attachment"), class: "text-blue-600 hover:underline mt-2 inline-block" %>
    <% else %>
      <p class="text-red-600 mt-2">No file attached</p>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3">
    <%= link_to "Edit this document", edit_document_path(@document), class: "rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-center font-medium" %>
    
    <%= link_to "Back to documents", documents_path, class: "rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-center font-medium" %>

    <%= button_to "Destroy this document", @document, method: :delete, form_class: "sm:inline-block", class: "rounded-md px-4 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium", data: { turbo_confirm: "Are you sure you want to delete this document?" } %>
  </div>
</div>
