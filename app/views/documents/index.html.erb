<% content_for :title, "All Documents" %>

<div class="max-w-5xl mx-auto px-6 py-10 text-gray-800">

  <% if notice.present? %>
    <p class="mb-6 bg-green-100 text-green-700 px-4 py-2 rounded-md">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-indigo-700">ğŸ“‚ All Documents</h1>
    <% if can?(:create, Document) %>
      <%= link_to "â• Upload New Document", new_document_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500" %>
    <% end %>
  </div>

  <% if @documents.any? %>
    <% @documents.each do |doc| %>
      <div class="mb-6 p-4 bg-white shadow rounded border border-gray-200">
        <p class="text-lg font-semibold text-gray-900 mb-1">ğŸ“„ <%= doc.title %></p>
        <p class="text-sm text-gray-700 mb-1"><strong>Category:</strong> <%= doc.category.presence || "Not categorized" %></p>
        <p class="text-sm text-gray-600 mb-2"><strong>Client:</strong> <%= doc.client&.name || "Not assigned" %></p>

        <div class="flex gap-4 text-sm">
          <% if doc.file.attached? %>
            <%= link_to "â¬‡ï¸ Download", rails_blob_path(doc.file, disposition: "attachment"), class: "text-blue-600 hover:underline" %>
          <% else %>
            <span class="text-red-600">âš ï¸ No file attached</span>
          <% end %>

          <% if can?(:edit, doc) %>
            <%= link_to "âœï¸ Edit", edit_document_path(doc), class: "text-yellow-600 hover:underline" %>
          <% end %>

          <% if can?(:destroy, doc) %>
            <%= link_to "ğŸ—‘ï¸ Delete", document_path(doc), method: :delete, data: { confirm: "Are you sure you want to delete this document?" }, class: "text-red-600 hover:underline" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-500 text-center">No documents uploaded yet.</p>
  <% end %>

</div>
