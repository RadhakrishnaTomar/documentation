<% content_for :title, "Upload Document" %>

<div class="max-w-2xl mx-auto p-8 bg-white shadow-md rounded-md">
  <h1 class="text-2xl font-bold mb-6">Upload Document</h1>

  <%= form_with model: @document, local: true, html: { multipart: true } do |form| %>
    <div class="mb-4">
      <%= form.label :title, "Document Title", class: "block font-medium mb-1" %>
      <%= form.text_field :title, class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :category, class: "block font-medium mb-1" %>
      <%= form.text_field :category, placeholder: "e.g. ID Proof, Income Certificate", class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :file, "Choose a file", class: "block font-medium mb-1" %>
      <%= form.file_field :file, class: "w-full" %>
    </div>

    <div class="mt-6">
      <%= form.submit "Upload", class: "bg-blue-600 hover:bg-blue-500 text-white px-5 py-2 rounded-md" %>
    </div>
  <% end %>
</div>
