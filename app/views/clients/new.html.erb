<h1 class="text-2xl font-bold mb-6">New Client</h1>

<% if @client.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
    <strong class="font-bold">Validation Error:</strong>
    <ul class="list-disc list-inside mt-2">
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @client, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block font-medium text-gray-700" %>
    <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :status, class: "block font-medium text-gray-700" %>
    <%= form.text_field :status, class: "mt-1 block w-full border border-gray-300 p-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :user_id, "Assign to User", class: "block font-medium text-gray-700" %>
    <%= form.collection_select :user_id, @users, :id, :email, prompt: "Select a client user", class: "mt-1 block w-full border border-gray-300 p-2 rounded" %>
  </div>

  <div>
    <%= form.submit "Create Client", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-500" %>
  </div>
<% end %>
