<h2 class="text-xl font-bold mb-4">Edit User Role</h2>

<%= form_with model: @user, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium" %>
    <%= f.email_field :email, class: "w-full border px-3 py-2 rounded", disabled: true %>
  </div>

  <div class="mb-4">
    <%= f.label :role, class: "block text-sm font-medium" %>
    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "w-full border px-3 py-2 rounded" %>
  </div>

  <%= f.submit "Update User", class: "bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
  