<div class="max-w-md mx-auto mt-12 bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-6 text-center">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium mb-1" %>
      <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded" %>
    </div>

    <div class="flex items-center justify-between mb-6">
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me %>

      <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-500 hover:underline" %>
    </div>

    <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>
