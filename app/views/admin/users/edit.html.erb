<h2 class="text-2xl font-bold mb-4">Edit User Role</h2>

<%= form_with model: [:admin, @user], local: true do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, disabled: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= f.label :role, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>

  <%= f.submit "Update User", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
<% end %>

<div class="mt-4">
  <%= link_to "Back to Users", admin_users_path, class: "text-gray-600 hover:underline" %>
</div>


